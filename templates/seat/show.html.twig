{% block title %}Seat{% endblock %}

{% block body %}
    <h1>Seat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ seat.name }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ seat.size }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ seat.price }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ seat.weight }}</td>
            </tr>
            <tr>
                <th>Density</th>
                <td>{{ seat.density }}</td>
            </tr>
            <tr>
                <th>Description</th>
